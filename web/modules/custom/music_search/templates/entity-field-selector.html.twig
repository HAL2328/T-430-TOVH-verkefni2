<div class="entity-field-selector">
  <h2 class="entity-field-selector__title">{{ 'Entity Field Selector'|t }}</h2>

  <p class="entity-field-selector__entity">
    <strong>{{ 'Entity Type'|t }}:</strong> {{ entity_type|capitalize }}
  </p>

  <form method="post" action="{{ path('entity.field_selector_form', {'entity_type': entity_type}) }}" class="entity-field-selector__form">
    {% if details is defined %}
    {% if entity_type == 'artist' %}
    <h3>{{ 'Artist'|t }}</h3>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
          <th>{{ 'Field'|t }}</th>
          <th>{{ 'Spotify'|t }}</th>
          <th>{{ 'Discogs'|t }}</th>
          <th>{{ 'Use This'|t }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>{{ 'Name'|t }}</td>
          <td>{{ details.spotify.name|default('N/A') }}</td>
          <td>{{ details.discogs.name|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="{{ details.spotify.name }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="{{ details.discogs.name }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
          </td>
        </tr>
        <tr>
          <td>{{ 'Image URL'|t }}</td>
          <td>{{ details.spotify.image|default('N/A') }}</td>
          <td>{{ details.discogs.image|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[image]" value="{{ details.spotify.image }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[image]" value="{{ details.discogs.image }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[image]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
    </div>

    {% elseif entity_type == 'song' %}
    <h3>{{ 'Song'|t }}</h3>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
          <th>{{ 'Field'|t }}</th>
          <th>{{ 'Spotify'|t }}</th>
          <th>{{ 'Discogs'|t }}</th>
          <th>{{ 'Use This'|t }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>{{ 'Name'|t }}</td>
          <td>{{ details.spotify.name|default('N/A') }}</td>
          <td>{{ details.discogs.name|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="{{ details.spotify.name }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="{{ details.discogs.name }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
          </td>
        </tr>
        <tr>
          <td>{{ 'Duration'|t }}</td>
          <td>{{ details.spotify.duration|default('N/A') }}</td>
          <td>{{ details.discogs.duration|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[duration]" value="{{ details.spotify.duration }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[duration]" value="{{ details.discogs.duration }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[duration]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
          </td>
        </tr>
        </tbody>
      </table>
    </div>

    {% elseif entity_type == 'album' %}
    <h3>{{ 'Album'|t }}</h3>
    <div class="table-responsive">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
        <tr>
          <th>{{ 'Field'|t }}</th>
          <th>{{ 'Spotify'|t }}</th>
          <th>{{ 'Discogs'|t }}</th>
          <th>{{ 'Use This'|t }}</th>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td>{{ 'Title'|t }}</td>
          <td>{{ details.spotify.name|default('N/A') }}</td>
          <td>{{ details.discogs.name|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="{{ details.spotify.name }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="{{ details.discogs.name }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[name]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
          </td>
        </tr>
        <tr>
          <td>{{ 'Label'|t }}</td>
          <td>{{ details.spotify.label|default('N/A') }}</td>
          <td>{{ details.discogs.label|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[label]" value="{{ details.spotify.label }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[label]" value="{{ details.discogs.label }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[label]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
          </td>
        </tr>
        <tr>
          <td>{{ 'Release Date'|t }}</td>
          <td>{{ details.spotify.release_date|default('N/A') }}</td>
          <td>{{ details.discogs.release_date|default('N/A') }}</td>
          <td>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[release_date]" value="{{ details.spotify.release_date }}" checked />
                {{ 'Spotify'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[release_date]" value="{{  details.discogs.release_date }}" />
                {{ 'Discogs'|t }}
              </label>
            </div>
            <div class="form-check">
              <label class="form-check-label">
                <input type="radio" class="form-check-input" name="fields[release_date]" value="" />
                {{ 'None'|t }}
              </label>
            </div>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  {% endif %}
{% endif %}
    <div class="form-group">
      <button type="submit" class="btn btn-primary">{{ 'Submit'|t }}</button>
    </div>
</form>
</div>
